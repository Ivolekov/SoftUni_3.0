@model LearningSystem.Models.ViewModels.Courses.DetailsCourseViewModel

@{ 
    ViewBag.Title = "Course Details";
}

@Html.DisplayNameFor(vm=>Model.Name):
@Html.DisplayFor(vm=>Model.Name)
<br />
@Html.DisplayNameFor(vm => Model.Description):
@Html.DisplayFor(vm => Model.Description)
<br />  
@Html.DisplayNameFor(vm => Model.StartDate):
@Html.DisplayFor(vm => Model.StartDate)
<br />
@Html.DisplayNameFor(vm => Model.EndDate):
@Html.DisplayFor(vm => Model.EndDate)
<br />
