@using CarDealer.Models;
@model IEnumerable<Sale>
@{
    ViewBag.Title = "Discount";
}

<h2>Discounted Sale</h2>

<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Customer</th>
            <th>Details</th>
            <th>Discount %</th>
        </tr>
    </thead>
    @foreach (var sale in Model)
    {
        <tr>
            <td>@sale.Car.Make</td>
            <td>@sale.Car.Model</td>
            <td>@sale.Customer.Name</td>
            <td>@Html.ActionLink("Details","Details", new { id=sale.Id})</td>
            <td>@sale.Discount</td>
        </tr>
    }
</table>

